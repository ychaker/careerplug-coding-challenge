<h1><%= @post.title %></h1>

<!-- Luckily Rails handles JS and SQL injections for us -->
<div class="trix-content"><%=raw @post.body %></div>

<div class="post-actions float-right my-2">
  <%= link_to t('.delete'),
              @post,
              data: { confirm: t('.sure') },
              method: :delete,
              class: 'btn btn-danger' %>
</div>

<div class="clearfix"></div>

<hr>

<div class="my-4">
  <h2><%= t('.comments') %></h2>

  <div id="new-comment" class="my-2">
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
  </div>

  <div id="comments-list" class="my-2">
    <%= render(partial: @post.comments - [ @comment ], spacer_template: 'spacer_line') || t('.empty_comments_html') %>
  </div>
</div>
